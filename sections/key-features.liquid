  #shopify-section-{{section.id}} .grid__item:nth-child(4){
    margin-top: 2vw;
  }
  #shopify-section-{{section.id}} .grid__item .inner-wrapper::before{
    content: "";
    display: inline-block;
    width: 10vw;
    border-bottom: 1px solid;
    position: absolute;
    top: 0.5vw;
  }
#shopify-section-{{section.id}} .grid__item .inner-wrapper{
  width: 15vw;
  min-width:240px;
}
#shopify-section-{{section.id}} .grid__item:nth-child(n) .inner-wrapper::before{
  left: 13vw;
}
#shopify-section-{{section.id}} .grid__item .inner-wrapper{
  margin-left: auto;
  position: relative;
}
#shopify-section-{{section.id}} .grid__item:nth-child(n) .inner-wrapper{
  margin-right: 17vw;
}
#shopify-section-{{section.id}} .grid__item:nth-child(2n) .inner-wrapper{ 
  margin-right: 0;
}
#shopify-section-{{section.id}} .grid__item:nth-child(2n) .inner-wrapper::before{
  right: 17vw;
  left: auto;
}
}
#shopify-section-{{section.id}} .grid--flush-bottom{
  overflow: visible;
}
#shopify-section-{{section.id}} #key_features_carousel{
  margin-bottom: 30px;
}
@media only screen and (min-width:769px){
  #shopify-section-{{section.id}} #key_features_carousel{

    width: 80%;
  }
}
#shopify-section-{{section.id}} #key_features_carousel .flickity-page-dots{
  bottom: -47px;
}
@media only screen and (min-width:1700px){
  #shopify-section-{{section.id}} .image-wrapper{
    width: 600px;
  }
  #shopify-section-{{section.id}} .grid{
    top: 200px;
  }
  #shopify-section-{{section.id}} .grid__item .inner-wrapper{
    width: 300px;
  }
   {% comment %} #shopify-section-{{section.id}} .inner-wrapper h3{
     font-size:calc(var(--typeHeaderSize)*.65)
   } {% endcomment %}
   #shopify-section-{{section.id}} .inner-wrapper p{
    font-size: 1rem;
   }
   #shopify-section-{{section.id}} .grid__item .inner-wrapper::before{
    width: 140px;

   }
#shopify-section-{{section.id}} .grid__item:nth-child(n) .inner-wrapper::before{
  left: 350px;
}
#shopify-section-{{section.id}} .grid__item:nth-child(2n) .inner-wrapper::before{
  right: 308px;
  left: auto ;
}
}

    
@media (min-width:769px) and (max-width:1699px){
  #shopify-section-{{section.id}} .inner-wrapper .h6{
    font-size: 1.7vw;
  }
  #shopify-section-{{section.id}} .inner-wrapper p{
    font-size: 1.3vw;
  }
  #shopify-section-{{section.id}} .grid__item:nth-child(2n) .inner-wrapper::before{
    right: 250px;
    left: auto;
  }
  #shopify-section-{{section.id}} .grid__item .inner-wrapper{
    width: 6vw;
  }
}
</style>

{% schema %}
{
  "name": "Key Features",
  "settings": [
  {
    "type": "color",
    "id": "background",
    "label": "Background Color"
  },
    {
      "type": "text",
      "id": "title",
      "label": "t:sections.text-columns.settings.title.label"
    },
    {
      "type": "text",
      "id": "sub-title",
      "label": "Sub Heading"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "align_text",
      "label": "t:sections.text-columns.settings.align_text.label",
      "default": "center",
      "options": [
        {
          "value": "left",
          "label": "t:sections.text-columns.settings.align_text.options.left.label"
        },
        {
          "value": "center",
          "label": "t:sections.text-columns.settings.align_text.options.center.label"
        },
        {
          "value": "right",
          "label": "t:sections.text-columns.settings.align_text.options.right.label"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "divider",
      "label": "t:sections.text-columns.settings.divider.label",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "text_block",
      "name": "t:sections.text-columns.blocks.column.name",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "t:sections.text-columns.blocks.column.settings.title.label",
          "default": "Example title"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "t:sections.text-columns.blocks.column.settings.text.label",
          "default": "<p>Use this section to explain a set of product features, to link to a series of pages, or to answer common questions about your products. Add images for emphasis.</p>"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "t:sections.text-columns.blocks.column.settings.button_label.label",
          "default": "Optional button"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "t:sections.text-columns.blocks.column.settings.button_link.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Key Features",
      "blocks": [
        {
          "type": "text_block"
        },
        {
          "type": "text_block"
        },
        {
          "type": "text_block"
        }
      ]
    }
  ]
}
{% endschema %}
