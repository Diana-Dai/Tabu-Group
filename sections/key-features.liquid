{%- if section.settings.divider -%}<div class="section--divider">{%- endif -%}

<div class="page-width">
  {%- if section.settings.title != blank -%}
    <div class="section-header text-{{ section.settings.align_text }}">
      <h2>{{ section.settings.title }}</h2>
      <p>{{ section.settings.sub-title }}</p>
    </div>
  {%- endif -%}

    <div class="image-wrapper">
      <div class="image-wrap" style="height: 0; padding-bottom: {{ 100 | divided_by: section.settings.image.aspect_ratio }}%;">
        {%- assign img_url = section.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
        <img role="presentation" class="feature-row__image lazyload"
          data-src="{{ img_url }}"
          data-widths="[180, 360, 540, 750, 900, 1080]"
          data-aspectratio="{{ section.settings.image.aspect_ratio }}"
          data-sizes="auto"
          alt="{{ section.settings.image.alt }}">
      </div>
    </div>

  <div id="key_features_carousel" class="grid{% unless section.blocks.size == 5 %} grid--uniform{% endunless %} grid--flush-bottom">
    {%- for block in section.blocks -%}
      <div class="grid__item text-{{ section.settings.align_text }}" {{ block.shopify_attributes }} data-aos="row-of-3">
        <div class="inner-wrapper"> 

          {%- if block.settings.title != blank -%}
          <h3 class="special-font h6">{{ block.settings.title }}</h3>
        {%- endif -%}
        {%- if block.settings.text != blank -%}
          <div class="rte-setting text-spacing">{{ block.settings.text }}</div>
        {%- endif -%}
        {%- if block.settings.button_label != blank -%}
          <a href="{{ block.settings.button_link }}" class="btn btn--secondary btn--small">
            {{ block.settings.button_label }}
          </a>
        {%- endif -%}
        </div>
      </div>
    {%- endfor -%}
  </div>
</div>

{%- if section.settings.divider -%}</div>{%- endif -%}

<style>
#shopify-section-{{section.id}}{
      padding:50px 0;
      background:{{section.settings.background}};
  }

@media only screen and (min-width:769px){
  #shopify-section-{{section.id}}{
    padding:100px 0;
    padding-bottom:130px;
  }
}
#shopify-section-{{section.id}} .image-wrapper{
  margin-left: -17px;
  margin-right: -17px;
}
#shopify-section-{{section.id}} .grid__item{
  padding-top: 30px;
  padding-bottom: 0;

}
#shopify-section-{{section.id}} .grid{
  border-top: 1px solid;
  border-bottom: 1px solid;
  margin-right: -17px;
  /* margin-bottom: 20px; */
}

@media only screen and (min-width:769px){

  #shopify-section-{{section.id}} .image-wrapper{
    width: 40%;
    /* min-width: 530px; */
    margin: 0 auto;
  }
  #shopify-section-{{section.id}}  .page-width{
    position:relative;
  }
  #shopify-section-{{section.id}} .grid{
    border: none;
    position: absolute;
    top: 16vw;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    width: 90%;
    margin-bottom: 0;
  }
  #shopify-section-{{section.id}} .grid__item{
    width: 50%;
    /* padding: 0 15%; */
    position: relative;
  }
